<html>

  <div id="stats-area">
  <h2>Statistics</h2>
  <p>Avg Age: <%=@avg_age.to_i%></p>
  <p>Hometowns:<% @player_hometowns.each do |player_hometown| %>
  <%= " " + player_hometown %>
<%end%>
    </p>
  </div>
  <div id="player-area">
  <% @players.each do |player| %>
    <section id="player-<%=player.id%>" class="player-card">
      <h2><%= player.name %></h2>
      <div><%= player.age %></div>
      <img class="profile-photo" id="player-<%=player.id%>-image" src="<%=player.image%>"/>
      <div>Hometown: <%=player.hometown%></div>
      <ul id="player-<%=player.id%>-cards">
        <li>Cards: <span><%=player.cards.count%></span></li>
      <% player.cards.each do |card| %>
        <li>
          <div><%=card.name%></div>
          <div><%=card.cost%></div>
          <div><%=card.description%></div>
        </li>
      <% end %>
      </ul>
    </section>
  <%end%>
  </div>
</html>
